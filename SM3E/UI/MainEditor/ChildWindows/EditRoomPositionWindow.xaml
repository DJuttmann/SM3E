<Window x:Class="SM3E.UI.EditRoomPositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SM3E.UI"
        mc:Ignorable="d"
        Title="[Title]" Height="400" Width="600" WindowStartupLocation="CenterOwner">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="22"/>
      <RowDefinition Height="8"/>
    </Grid.RowDefinitions>
    <ScrollViewer x:Name="MapViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8,8,8,8" HorizontalScrollBarVisibility="Visible"/>
    <Button Grid.Row="1" Width="75" Height="20" Content="Save"   Margin="0,0,90,0" Click="Save_Click"/>
    <Button Grid.Row="1" Width="75" Height="20" Content="Cancel" Margin="90,0,0,0" Click="Cancel_Click"/>
  </Grid>
</Window>
