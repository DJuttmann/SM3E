<UserControl x:Class="SM3E.UI.UIElements.HexBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SM3E.UI.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150"
             x:Name="LayoutRoot">

  <TextBox x:Name="Box" MaxLength="{Binding Path=MaxLength, ElementName=LayoutRoot}" FontFamily="Courier New" KeyDown="ValidateHexInput"/>
</UserControl>
