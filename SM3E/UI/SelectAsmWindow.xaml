<Window x:Class="SM3E.UI.SelectAsmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SM3E.UI"
        mc:Ignorable="d"
        Title="Select [type] ASM" Height="300" Width="300" WindowStartupLocation="CenterOwner">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="8"/>
      <RowDefinition Height="22"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="22"/>
      <RowDefinition Height="8"/>
    </Grid.RowDefinitions>
    <CheckBox Grid.Row="1" x:Name="AsmCheck" Content="Use [type] ASM" Margin="8,0,8,0" Click="AsmCheck_Click"/>
    <ListBox Grid.Row="2" x:Name="AsmSelect" Margin="8,0,8,8"/>
    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <Button Grid.Column="0" Margin="8,0,4,0" Content="Cancel" Click="Cancel_Click"/>
      <Button Grid.Column="1" Margin="4,0,8,0" Content="Save" Click="Save_Click"/>
    </Grid>
  </Grid>
</Window>
