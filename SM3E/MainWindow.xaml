<Window x:Class="SM3E.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SM3E"
    xmlns:ui="clr-namespace:SM3E.UI"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="SM&#x00B3;E" Height="750" Width="1000" Closed="MainWindow_Close">


  <!-- MAIN GRID -->
  <Grid Background="#C0C0C0">
    <Grid.RowDefinitions>
      <RowDefinition Height="17"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>


    <!-- MENU BAR -->
    <Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
      <MenuItem Header="_File">
        <MenuItem Header="_New Project" Click="NewProject_Click"/>
        <MenuItem Header="_Open" Click="OpenProject_Click"/>
        <MenuItem Header="_Save" Click="SaveProject_Click"/>
      </MenuItem>
      <MenuItem Header="_Settings">
      </MenuItem>
    </Menu>

    <ui:Editor x:Name="EditorView" Grid.Row="1"/>
    
  </Grid>
</Window>
